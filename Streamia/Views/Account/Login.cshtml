@model Streamia.ViewModels.LoginViewModel

@{
    Layout = "_Main";
    ViewData["DisableNavbar"] = string.Empty;
}

@section Styles {
    <style>
        .ex-header {
            padding-top: 7rem;
            padding-bottom: 7rem;
        }
    </style>
}

<!-- Header -->
<header id="header" class="ex-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Streamia Login</h1>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</header> <!-- end of ex-header -->
<!-- end of header -->

<div class="ex-basic-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="text-container">
                    <form method="post">

                        <div class="form-group">
                            <input asp-for="Email" class="form-control-input" required>
                            <label asp-for="Email" class="label-control"></label>
                            <span class="help-block with-errors" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control-input" required>
                            <label asp-for="Password" class="label-control"></label>
                            <span class="help-block with-errors" asp-validation-for="Password"></span>
                        </div>

                        <button type="submit" class="form-control-submit-button">LOGIN</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
